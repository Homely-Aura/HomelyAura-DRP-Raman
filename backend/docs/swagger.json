{
  "openapi": "3.0.0",
  "info": {
    "title": "HomelyAuraDRP API",
    "version": "1.0.0",
    "description": "API documentation for the HomelyAura Daily Reporting Portal backend."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["admin", "subadmin", "employee"]
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "user": { "$ref": "#/components/schemas/User" }
        }
      },
      "EmployeeProfile": {
        "type": "object",
        "properties": {
          "designation": { "type": "string" },
          "age": { "type": "integer" },
          "gender": {
            "type": "string",
            "enum": ["Male", "Female", "Other"]
          },
          "dateOfJoining": { "type": "string", "format": "date" },
          "photo": { "type": "string" }
        }
      },
      "Report": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "employee": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "workDetails": { "type": "string" },
          "inTime": { "type": "string", "format": "date-time" },
          "outTime": { "type": "string", "format": "date-time" },
          "duration": {
            "type": "integer",
            "description": "Duration in minutes"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Signup for sub-admin or employee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": {
                    "type": "string",
                    "enum": ["subadmin", "employee"]
                  }
                },
                "required": ["name", "email", "password", "role"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login for sub-admin or employee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/auth/admin/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Admin login (hard-coded credentials)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Admin login successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/admin/subadmins": {
      "get": {
        "tags": ["Admin"],
        "summary": "List all sub-admins",
        "responses": {
          "200": {
            "description": "Array of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/employees": {
      "get": {
        "tags": ["Admin"],
        "summary": "List all employees",
        "responses": {
          "200": {
            "description": "Array of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        }
      }
    },
    "/api/subadmin/assigned": {
      "get": {
        "tags": ["SubAdmin"],
        "summary": "Get employees assigned to this sub-admin",
        "responses": {
          "200": {
            "description": "Assignment list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        }
      }
    },
    "/api/subadmin/assign": {
      "post": {
        "tags": ["SubAdmin"],
        "summary": "Assign an employee to this sub-admin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "employeeId": { "type": "string" }
                },
                "required": ["employeeId"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Assignment successful" }
        }
      }
    },
    "/api/subadmin/unassign/{employeeId}": {
      "delete": {
        "tags": ["SubAdmin"],
        "summary": "Unassign an employee",
        "parameters": [
          {
            "name": "employeeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Unassignment successful" }
        }
      }
    },
    "/api/employee/profile": {
      "get": {
        "tags": ["Employee"],
        "summary": "Fetch logged-in employeeâ€™s profile",
        "responses": {
          "200": {
            "description": "Profile data or basic user info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": { "$ref": "#/components/schemas/User" },
                    "profile": {
                      "oneOf": [
                        { "$ref": "#/components/schemas/EmployeeProfile" },
                        { "type": "null" }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Employee"],
        "summary": "Create or update employee profile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmployeeProfile"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upserted profile",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EmployeeProfile" }
              }
            }
          }
        }
      }
    },
    "/api/report": {
      "post": {
        "tags": ["Report"],
        "summary": "Employee submits a new daily report",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "workDetails": { "type": "string" },
                  "inTime": { "type": "string", "format": "date-time" },
                  "outTime": { "type": "string", "format": "date-time" }
                },
                "required": ["workDetails"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Report created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Report" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Report"],
        "summary": "Get all reports (admin/subadmin)",
        "parameters": [
          {
            "name": "employeeId",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Report" }
                }
              }
            }
          }
        }
      }
    },
    "/api/report/my": {
      "get": {
        "tags": ["Report"],
        "summary": "Get logged-in employeeâ€™s own reports",
        "responses": {
          "200": {
            "description": "Array of reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Report" }
                }
              }
            }
          }
        }
      }
    },
    "/api/report/{id}": {
      "patch": {
        "tags": ["Report"],
        "summary": "Update in/out times or work details for a report",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "workDetails": { "type": "string" },
                  "inTime": { "type": "string", "format": "date-time" },
                  "outTime": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated report",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Report" }
              }
            }
          }
        }
      }
    }
  }
}
